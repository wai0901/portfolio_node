<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My Portfolio</title>
    
        <link href="https://fonts.googleapis.com/css?family=Raleway:300 400,700,900&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/92f66e5c84.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="./css/index.css">
        <link rel="stylesheet" href="./css/menu.css">
        <link rel="stylesheet" href="./css/porfolio.css">
    </head>
    <body>
        <div class="main-container">

            <!-- Menu -> menu.css-->
            <%- include('./partial-views/_menu.ejs') %>

            <!-- Background's cloud  -> index.css-->
            <%- include('./partial-views/_clouds.ejs') %>

            <!-- Dots indicator  -> index.css-->
            <%- include('./partial-views/_dots-indicator.ejs') %>

            <!-- Airplane  -> index.css-->
            <%- include('./partial-views/_air-plane.ejs') %>

            <!-- Title Section  -> index.css-->
            <div id="s0" class="title-container sections" data-dot="d0">
                <div class="title-group title">
                    <p>const</p>
                    <h1>wai leung</h1>
                </div>
                <div class="title-group sub-title">
                    <p><span> = </span> "web dev" <span> + </span> "graphic designer" <span class="semicolon"> ; </span></p>
                </div>
                <div class="title-group sun-container">
                    <svg class="sun" width="100%" height="50%" href="#">
                        <image xlink:href="img/sun.svg" x="30%" y="0" width="130px" height="130px"></image>
                    </svg>
                </div>
            </div> <!-- title-container -->

            <!-- earth animation  -> index.css-->
            <%- include('./partial-views/_earth.ejs') %>

            <!-- porfolio Section  -> porfolio.css-->
            <% portfolioData.forEach(data => { %> 
                <div id="<%= data.linkId %>" class="background-porfolio">
                    <div id="<%= data.id %>" class="card-container" data-dot="<%= data.dataDot %>>">
                        <h4><%= data.title %></h4>
                        <div class="project-intro">
                            <img src="img/Luke_website.jpg" alt="luke">
                            <div class="tools-icons">
                                <i class="fab fa-js"></i>
                                <i class="fab fa-node-js"></i>
                                <i class="fab fa-react"></i>
                                <i class="fab fa-aws"></i>
                                <i class="fab fa-sass"></i>
                            </div>
                            <div>
                                <p><%= data.tools %></p>
                            </div>
                        </div>
                        <div class="btn <%= "btn" + data.id %>">
                            <div class="btn-back">
                                <div class="video-container">
                                    <iframe width="100%" height="100%" 
                                        src="https://www.youtube.com/embed/skC5g5xHqeI" frameborder="0" 
                                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                                    </iframe>
                                </div>
                                <p><%= data.tools %></p>
                                <button class="btn-close">Close</button>
                            </div>
                            <button class="btn-front">Detail</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <script src="js/scripts.js"></script>
        <script src="js/porfolio.js"></script>
    </body>

</html>